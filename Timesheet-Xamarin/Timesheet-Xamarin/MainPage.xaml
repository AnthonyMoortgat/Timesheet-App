<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:Timesheet_Xamarin"
             x:Class="Timesheet_Xamarin.MainPage">

    <StackLayout>
        <Label 
            Text="Start..."
            x:Name="LabelStartTime"
            />

        <TimePicker
            x:Name="StartTime" 
            Format="HH:mm"
            />

        <Label 
            Text="End..."
            x:Name="LabelEndTime"
            />

        <TimePicker
            x:Name="EndTime" 
            Format="HH:mm"
            />

        <Label 
            Text="Project"
            x:Name="LabelProject"
            />

        <Picker
            x:Name="ProjectList"  
            />

        <Entry
            x:Name="DescriptionEntry"
            Placeholder="Description"
            Text=""
            />

        <Button 
            Text="Log Uren" 
            x:Name="LogTime"
            Clicked="LogTime_Clicked"
            />

        <ListView 
            x:Name="LogList1"
            />

        <!--
        <Button 
            Text="To_MainPage" 
            x:Name="btnmainpage"
            Clicked="GoToMainPage"
            />
            -->
    </StackLayout>
</ContentPage>
