<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timesheet_Xamarin.CompanyUserListPage">
    <ContentPage.Content>
        <StackLayout>
            <Label
                x:Name="LabelNoUsers"
                Text="No Consultants"
                IsEnabled="False"
                IsVisible="False"
                />

            <Button
                x:Name="AddConsultantButton"
                Text="Add Consultant"
                Padding="3"
                ScaleX="0.75"
                ScaleY="0.75"
                Clicked="AddConsultantButton_Clicked"
                />

            <ScrollView>
                <ListView
                    x:Name="Consultantlist"
                    ItemSelected="OnItemSelected"
                />
            </ScrollView>

            <Button
                x:Name="BackButton"
                Text="Back"
                Padding="3"
                ScaleX="0.75"
                ScaleY="0.75"
                Clicked="BackButton_Clicked"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>