<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timesheet_Xamarin.CompanyOptionPage">
    <ContentPage.Content>
        <StackLayout>
            <Button
                x:Name="AddProject"
                Text="Add Project"
                Clicked="ClickAddProject"
                ScaleX="0.75"
                ScaleY="0.75"
            />
            <Button
                x:Name="AddWorkerToCompany"
                Text="Add Worker To Company"
                Clicked="ClickAddWorker"
                ScaleX="0.75"
                ScaleY="0.75"
            />
            <Button
                x:Name="AddConsultantToProject"
                Text="Add Consultant To Project"
                Clicked="ClickAddConsultant"
                ScaleX="0.75"
                ScaleY="0.75"
            />
            <Button
                x:Name="AddRoles"
                Clicked="ClickAddRoles"
                ScaleX="0.75"
                ScaleY="0.75"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
    