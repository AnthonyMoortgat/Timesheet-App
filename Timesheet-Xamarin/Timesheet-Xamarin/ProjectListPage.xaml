<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timesheet_Xamarin.ProjectListPage">
    <ContentPage.Content>
        <StackLayout>
            <Button
                Text="Add project"
                x:Name="AddProjectButton"
                Clicked="AddProjectButton_Clicked"
                Padding="3"
                Scale="0.75"
                />

            <ScrollView>
                <ListView
                    x:Name="ProjectList"
                    ItemSelected="OnItemSelected"
                />
            </ScrollView>

            <Button
                Text="Back"
                x:Name="BackToOptionpageButton"
                Clicked="BackToOptionpageButton_Clicked"
                Padding="3"
                Scale="0.75"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>