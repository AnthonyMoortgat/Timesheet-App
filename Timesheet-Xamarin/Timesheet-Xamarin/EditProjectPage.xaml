<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timesheet_Xamarin.EditProjectPage">
    <ContentPage.Content>
        <StackLayout>
            <Button
                x:Name="AddConsultantToProjectButton"
                Clicked=""
                Text="Add Consultant To Project"
                ScaleX="0.75"
                ScaleY="0.75"
            />
            <Entry
                x:Name="EntryDescription"
                Placeholder="Description"
                Text=""
                ScaleX="0.75"
                ScaleY="0.75"
            />
            <Picker
                x:Name="PickerOveruren"
                
                />
                
            
            
            
            
            
            
            
            <Button
                x:Name="DeleteRoleButton"
                Text="Delete Role"
                Padding="3"
                ScaleX="0.75"
                ScaleY="0.75"
                Clicked="DeleteRoleButton_Clicked"
                />

            <Button
                x:Name="CancelButton"
                Text="Cancel"
                Padding="3"
                ScaleX="0.75"
                ScaleY="0.75"
                Clicked="CancelButton_Clicked"
                />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>