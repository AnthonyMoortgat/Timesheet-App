<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timesheet_Xamarin.AddProjectPage">
    <ContentPage.Content>
        <StackLayout>
            <Entry
                x:Name="EntryNameProject"
                Placeholder="Project Name"
                Text=""
                FontSize="13"
            />
            <Entry
                x:Name="EntryDescription"
                Placeholder="Description"
                Text=""
                FontSize="13"
            />

            <Button
                x:Name="AddProjectButton"
                Clicked="ClickAddProjectAsync"
                Text="Add Project"
                Padding="3"
                ScaleX="0.75"
                ScaleY="0.75"
            />

            <Button
                x:Name="CancelButton"
                Clicked="CancelButton_Clicked"
                Text="Cancel"
                Padding="3"
                ScaleX="0.75"
                ScaleY="0.75"
            />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>