<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timesheet_Xamarin.Roles">
    <ContentPage.Content>
        <StackLayout>
            <Button
                x:Name="addRole"
                Text="Add Role"
                Clicked="Add_Role"
                />

            <StackLayout>
                <ScrollView>
                    <ListView
                        x:Name="RoleList"
                        />
                </ScrollView>
            </StackLayout>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>