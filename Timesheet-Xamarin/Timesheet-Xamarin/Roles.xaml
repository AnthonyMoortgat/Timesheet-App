<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Timesheet_Xamarin.Roles">
    <ContentPage.Content>
        <StackLayout>
            <Button
                x:Name="addRole"
                Text="Add Role"
                Clicked="Add_Role"
                Padding="3"
                ScaleX="0.75"
                ScaleY="0.75"
                />

            <StackLayout>
                <ScrollView>
                    <ListView
                        x:Name="RoleList"
                        ItemSelected="RoleList_ItemSelected"
                        />
                </ScrollView>
            </StackLayout>

            <Button
                x:Name="BackButton"
                Text="Back"
                Clicked="BackButton_Clicked"
                Padding="3"
                ScaleX="0.75"
                ScaleY="0.75"
                />

        </StackLayout>
    </ContentPage.Content>
</ContentPage>